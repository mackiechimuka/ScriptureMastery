@page
@model ScriptureMastery.Pages.Scriptures.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1 style="color:midnightblue;font-style:italic;">Edit</h1>

<h4>Scripture</h4>
<hr />
<div class="row" style="margin-bottom:10px;">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Scripture.ScriptureId" />
            <div class="form-group">
                <label asp-for="Scripture.BookId" class="control-label"></label>
                <select asp-for="Scripture.BookId" class="form-control" asp-items="ViewBag.BookId"></select>
                <span asp-validation-for="Scripture.BookId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Scripture.Chapter" class="control-label"></label>
                <input asp-for="Scripture.Chapter" class="form-control" />
                <span asp-validation-for="Scripture.Chapter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Scripture.Verses" class="control-label"></label>
                <input asp-for="Scripture.Verses" class="form-control" />
                <span asp-validation-for="Scripture.Verses" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Scripture.Notes" class="control-label"></label>
                <input asp-for="Scripture.Notes" class="form-control" />
                <span asp-validation-for="Scripture.Notes" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-bottom:10px;">
                <label asp-for="Scripture.CreatedDate" class="control-label"></label>
                <input asp-for="Scripture.CreatedDate" class="form-control" />
                <span asp-validation-for="Scripture.CreatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />|
                <a asp-page="./Index" class="btn btn-primary">Back to List</a>

            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
