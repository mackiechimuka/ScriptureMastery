@page
@model ScriptureMastery.Pages.Books.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1 style="color:midnightblue;font-style:italic;">Books</h1>

<p>
    <a asp-page="Create" class="btn " style="background-color:midnightblue;color:gold;">Create New</a>
</p>
<table class="table table-hover table-bordered shadow p-3 mb-5 bg-white rounded">
    <thead style="background-color:midnightblue;color:gold;">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Book[0].BookName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Book)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BookName)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.BookId" class="btn btn-success">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.BookId" class="btn btn-primary">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.BookId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
